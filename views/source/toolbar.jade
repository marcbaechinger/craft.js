div.directory-item(id="build-toolbar")
	button.btn.btn-mini.btn-inverse.transform(data-path="#{path}", data-action="build") transform
		
	label(for="plain", title="serve resulting file as text/javascript")
		span.label.label-success plaintext
			input(id="plain", name="plain", type="checkbox")
	
	if context === "repo"
		label(for="release", title="create a persistent release for the current file")
			span.label.label-success release
				input(id="release", name="release", type="checkbox")
			
	span.pipe |
	
	if context === "repo"
		label(for="expand", title="resolves and expands dependencies declared in the script file", style="margin-left: 10px;")
			span.label.label-info expand
				if job.expand
					input(id="expand", name="expand", type="checkbox", checked="checked")
				else 
					input(id="expand", name="expand", type="checkbox")
	
	label(for="mangle", title="obfuscate variable names to save characters")
		span.label.label-info mangle
			if job.transformation.mangle
				input(id="mangle", name="mangle", type="checkbox", checked="checked")
			else 
				input(id="mangle", name="mangle", type="checkbox")

	label(for="squeeze", title="additional squeezing option (see uglify-js docs)")
		span.label.label-info squeeze
			if job.transformation.squeeze
				input(id="squeeze", name="squeeze", type="checkbox", checked="checked")
			else
				input(id="squeeze", name="squeeze", type="checkbox")
		
	label(for="minimize", title="render AST in mimimized form")
		span.label.label-info minimize
			if job.transformation.minimize
				input(id="minimize", name="minimize", type="checkbox", checked="checked")
			else
				input(id="minimize", name="minimize", type="checkbox")

	label(for="beautify", title="render AST in pretty-printed form")
		span.label.label-info beautify
			if job.transformation.beautify
				input(id="beautify", name="beautify", type="checkbox", checked="checked")
			else
				input(id="beautify", name="beautify", type="checkbox")

	span.pipe |
	label(for="lint", title="apply JSHint validation")
		span.label.label-warning lint
			if job.validate.lint
				input(id="lint", name="lint", type="checkbox", checked="checked")
			else 
				input(id="lint", name="lint", type="checkbox")
