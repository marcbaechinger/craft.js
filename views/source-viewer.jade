extends layout

block content
	if displayMode === "js"
		if context === config.context.src
			div.breadcrumb
				a(href="/#{context}/", style="text-decoration: none;", title="jump to the root of the source repository") #{context}:/
				each path, name in breadcrumb
					a(href="/#{context}/#{path}") #{name}
					span /
				span #{fileName}
		include source/toolbar

	if typeof dependencies !== "undefined"
		h2.collapse Dependencies of #{path}
		ul.dependencies
			each dep in dependencies
				li: a(href="/#{config.context.src}#{dep}") #{dep}
					
	if typeof report !== "undefined"
		h2.collapse JSHint report
		div.clearfix
			.options-panel
				include lint/lint-options
			.status-panel
				include lint/lint-report

	if typeof lines !== "undefined"
		include source/source-listing